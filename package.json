{
  "name": "arthas-for-vscode",
  "displayName": "Arthas for VSCode",
  "description": "Right-click to quickly copy Arthas watch commands",
  "version": "1.0.2",
  "icon": "images/ar.png",
  "publisher": "JustLookAtNow",
  "repository": {
    "type": "git",
    "url": "https://github.com/JustLookAtNow/arthas-for-vscode.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "redhat.java"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arthas-for-vscode.copyWatchCommand",
        "title": "Copy Arthas watch command"
      },
      {
        "command": "arthas-for-vscode.copyJadCommand",
        "title": "Copy Arthas jad command"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == java",
          "command": "arthas-for-vscode.copyWatchCommand",
          "group": "ArthasCommands@1"
        },
        {
          "when": "resourceLangId == java",
          "command": "arthas-for-vscode.copyJadCommand",
          "group": "ArthasCommands@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.3.2",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  }
}