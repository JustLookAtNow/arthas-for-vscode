{
  "name": "arthas-for-vscode",
  "displayName": "Arthas for VSCode",
  "description": "Right-click to quickly copy Arthas watch commands",
  "version": "1.1.0",
  "icon": "images/ar.png",
  "publisher": "JustLookAtNow",
  "repository": {
    "type": "git",
    "url": "https://github.com/JustLookAtNow/arthas-for-vscode.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "redhat.java"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arthas-for-vscode.copyWatchCommand",
        "title": "watch"
      },
      {
        "command": "arthas-for-vscode.copyJadCommand",
        "title": "jad"
      }
    ],
    "submenus": [
      {
        "id": "arthas-for-vscode.arthasCommands",
        "label": "Copy Arthas command"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == java",
          "submenu": "arthas-for-vscode.arthasCommands",
          "group": "navigation"
        }
      ],
      "arthas-for-vscode.arthasCommands": [
        {
          "command": "arthas-for-vscode.copyWatchCommand",
          "group": "1_arthas@1"
        },
        {
          "command": "arthas-for-vscode.copyJadCommand",
          "group": "1_arthas@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.3.2",
    "mocha": "^11.1.0",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  }
}
